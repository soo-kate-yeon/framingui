{
  "name": "@tekton-ui/mcp-server",
  "version": "0.3.3",
  "description": "Tekton MCP Server with Claude Code integration and timestamp-based preview system",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/mcp-schemas.js",
      "types": "./dist/schemas/mcp-schemas.d.ts"
    }
  },
  "bin": {
    "tekton-mcp": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soo-kate-yeon/tekton",
    "directory": "packages/mcp-server"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start": "node dist/index.js",
    "inspect": "npx @anthropic-ai/mcp-inspector node dist/index.js",
    "lint": "eslint src __tests__ --ext .ts",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "tsc --project tsconfig.test.json --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.40.0",
    "@babel/parser": "^7.28.6",
    "@babel/traverse": "^7.28.6",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@tekton-ui/core": "workspace:*",
    "@tekton-ui/ui": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@babel/types": "^7.28.6",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.18.0",
    "globals": "^17.0.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT"
}
