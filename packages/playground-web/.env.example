# Supabase Authentication Environment Variables
# SPEC-AUTH-001: Supabase 인증 통합

# ============================================================
# Supabase Configuration
# ============================================================

# Supabase Project URL
# 발급: https://supabase.com/dashboard/project/PROJECT_ID/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key (공개 가능)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase Service Role Key (서버 사이드 전용, 절대 노출 금지)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================================
# Database Configuration (Optional)
# ============================================================

# Supabase PostgreSQL 직접 연결 (선택사항)
# 형식: postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# DATABASE_URL=postgresql://user:pass@localhost:5432/tekton_studio

# ============================================================
# License Verification API (Optional)
# ============================================================

# 라이선스 검증 API 엔드포인트
# LICENSE_API_URL=https://api.tekton.design/licenses

# License API Key
# LICENSE_API_KEY=your-license-api-key

# ============================================================
# Application Configuration (SPEC-DEPLOY-001)
# ============================================================

# Production App URL (Vercel 배포 후)
NEXT_PUBLIC_APP_URL=https://tekton-ui.com

# ============================================================
# Paddle Payment Configuration (SPEC-DEPLOY-001 Phase 3)
# ============================================================

# Paddle API Key (서버 사이드 전용)
# 발급: https://vendors.paddle.com/authentication
PADDLE_API_KEY=your-paddle-api-key

# Paddle Webhook Secret (서버 사이드 전용)
# 발급: Paddle Dashboard > Developer Tools > Webhooks
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret

# Paddle Client Token (클라이언트 사이드 사용 가능)
# 발급: Paddle Dashboard > Developer Tools > Authentication
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=your-paddle-client-token

# Paddle Environment (sandbox 또는 production)
NEXT_PUBLIC_PADDLE_ENVIRONMENT=sandbox

# Paddle Price IDs (Paddle Dashboard > Catalog > Prices)
NEXT_PUBLIC_PADDLE_PRICE_SINGLE=pri_xxx
NEXT_PUBLIC_PADDLE_PRICE_DOUBLE=pri_xxx
NEXT_PUBLIC_PADDLE_PRICE_CREATOR=pri_xxx

# ============================================================
# Feature Flags
# ============================================================

# 인증 기능 활성화 (false 또는 미설정 시 인증 없이 데모 모드로 실행)
NEXT_PUBLIC_ENABLE_AUTH=false

# 결제 기능 활성화 (SPEC-DEPLOY-001)
NEXT_PUBLIC_ENABLE_PAYMENTS=false

# MCP Export 기능 활성화
NEXT_PUBLIC_ENABLE_MCP_EXPORT=true

# Debug 모드 (개발 환경에서만 사용)
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================
# E2E Testing Configuration (SPEC-DEPLOY-001 Phase 2.5)
# ============================================================

# Playwright Test Base URL (기본값: http://localhost:3001)
PLAYWRIGHT_TEST_BASE_URL=http://localhost:3001

# Playwright Headless 모드 (true: 백그라운드, false: 브라우저 UI 표시)
PLAYWRIGHT_HEADLESS=true

# OAuth 테스트용 계정 (선택사항, 수동 테스트 시 사용)
# TEST_GOOGLE_EMAIL=your-test@gmail.com
# TEST_GITHUB_EMAIL=your-test@users.noreply.github.com

# ============================================================
# PostHog Analytics Configuration
# ============================================================

# PostHog API Key (클라이언트 사이드 사용 가능)
# 발급: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-project-api-key

# PostHog Host (기본값: https://app.posthog.com, 자체 호스팅 시 변경)
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ============================================================
# Resend Email Service Configuration
# ============================================================

# Resend API Key (서버 사이드 전용)
# 발급: https://resend.com/api-keys
RESEND_API_KEY=your-resend-api-key
